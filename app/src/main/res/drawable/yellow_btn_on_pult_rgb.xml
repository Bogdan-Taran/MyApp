<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#FEFF00"
                android:endColor="#F3F06C"
                android:angle="270"
                />
            <stroke android:color="@color/black"
                android:width="2sp"/>


        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#9FA000"
                android:endColor="#A19D9B33"
                android:angle="270"
                />

            <stroke android:color="@color/black"
                android:width="2sp"/>



        </shape>




    </item>


</selector>
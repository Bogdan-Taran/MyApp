<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#FF2A2A"
                android:endColor="#FF5454"
                android:angle="270"
                />
            <stroke android:color="@color/black"
                android:width="2sp"/>


        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#8C0B0B"
                android:endColor="#874040"
                android:angle="270"
                />
            <stroke android:color="@color/black"
                android:width="2sp"/>



        </shape>




    </item>


</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#345ACD"
                android:endColor="#B51F7877"
                android:angle="270"
                />

            <stroke android:color="@color/black"
                android:width="2sp"/>


        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:startColor="#1B2F6A"
                android:endColor="#B5103D3D"
                android:angle="270"
                />

            <stroke android:color="@color/black"
                android:width="2sp"/>



        </shape>




    </item>


</selector>
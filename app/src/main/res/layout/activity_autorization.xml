<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutorizationActivity"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/textview_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ВХОД В СИСТЕМУ"
        android:fontFamily="@font/beauty_font_rus"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_sign_in"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:background="#30FFFFFF"
        android:hint="Логин"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/beauty_font_rus"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="30dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="#30FFFFFF"
        android:hint="Email"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/beauty_font_rus"
        android:drawableLeft="@drawable/baseline_alternate_email_24"
        android:drawablePadding="30dp"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/email"
        android:layout_marginEnd="25dp"
        android:background="#30FFFFFF"
        android:hint="Пароль"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/beauty_font_rus"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="30dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn"
        android:layout_marginTop="40dp"
        android:layout_below="@id/password"
        android:text="Войти"
        android:textColor="@color/white"
        android:fontFamily="@font/beauty_font_rus"
        android:textSize="40dp"
        android:backgroundTint="#7E031E49"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/login_btn"
        android:textSize="25dp"
        android:text="Забыли пароль?"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/beauty_font_rus"
        android:id="@+id/forgot_password"
        />
    <TextView
        android:layout_below="@id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:text="Регистрация"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/beauty_font_rus"
        android:id="@+id/registration"
        />



</RelativeLayout>
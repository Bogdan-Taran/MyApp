<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TheHomeActivity">

    <ImageView
        android:id="@+id/background_image_the_home_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:scaleY="1.1"
        android:src="@drawable/background_room_not_blur"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_my_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:paddingStart="40dp"
            android:paddingEnd="20dp"
            android:text="Мой дом"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/settings_icon" />
    </TableRow>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/circles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_my_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-70dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/circle_the_home_activity"
        android:layout_width="700dp"
        android:layout_height="700dp"
        app:cardCornerRadius="600dp"
        app:strokeWidth="10dp"
        app:strokeColor="#A59797"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="-450dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#00FFFFFF">

    </com.google.android.material.card.MaterialCardView>

<!--Разность между marginTop и MarginEnd должна быть 80-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/circle_room_bogdan"
        android:textAllCaps="false"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_for_general_cirlce"
        android:text="Комната Богдан"
        android:textColor="#CCFFFFFF"
        android:textSize="20dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/circle_veranda"
        android:textAllCaps="false"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/background_for_circles"
        android:text="Веранда"
        android:textColor="#CCFFFFFF"
        android:textSize="20dp"
        />



    <androidx.cardview.widget.CardView
        android:id="@+id/circle_banya"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="385dp"
        android:layout_marginEnd="190dp"
        app:cardBackgroundColor="#D91C1717">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Баня"
            android:textColor="#CCFFFFFF"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/circle_kitchen"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="110dp"
        app:cardBackgroundColor="#D91C1717">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кухня"
            android:textColor="#CCFFFFFF"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/circle_storeroom_bogdan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="690dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#D91C1717">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сарайка Богдан"
            android:textColor="#CCFFFFFF"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
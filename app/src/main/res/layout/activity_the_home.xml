<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_for_activities"
    tools:context=".TheHomeActivity">

    <TextView
        android:id="@+id/text_top_my_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_under_textview_"
        android:fontFamily="@font/beauty_font_rus"
        android:gravity="center"
        android:text="Мой дом"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_names_of_activities_inTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_top_my_home">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/room_bogdan"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/gradient_for_buttons"
                android:fontFamily="@font/beauty_font_rus"
                android:text="Комната Богдан"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_names_of_rooms"
                android:layout_gravity="start"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/veranda"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_gravity="end"
                android:background="@drawable/gradient_for_buttons"
                android:fontFamily="@font/beauty_font_rus"
                android:text="Веранда"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_names_of_rooms"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/banya"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="132sp"
                android:background="@drawable/gradient_for_buttons"
                android:fontFamily="@font/beauty_font_rus"
                android:text="Баня"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_names_of_rooms"
                android:layout_gravity="start"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sarayka_bogdan"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_marginTop="132sp"
                android:layout_gravity="end"
                android:background="@drawable/gradient_for_buttons"
                android:fontFamily="@font/beauty_font_rus"
                android:text="Сарайка Богдан"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_names_of_rooms"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/kuhnya"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="248sp"
                android:background="@drawable/gradient_for_buttons"
                android:fontFamily="@font/beauty_font_rus"
                android:text="Кухня"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_names_of_rooms"
                android:layout_gravity="start"
                />



        </FrameLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
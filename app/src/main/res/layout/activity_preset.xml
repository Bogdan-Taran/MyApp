<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresetActivity"
    android:background="@drawable/gradient_background_for_activities">

    <TextView
        android:id="@+id/text_top_presets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_under_textview_"
        android:fontFamily="@font/beauty_font_rus"
        android:gravity="center"
        android:text="Пресеты"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_names_of_activities_inTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_top_presets">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:layout_marginTop="25sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="20sp"
                android:background="@drawable/gradient_linearlayout_presets"

                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_turn_on_all_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_btn_turn_on_all_light"
                    android:text="Вкл"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_in_presets"
                    android:fontFamily="@font/beauty_font_rus"
                    android:layout_marginEnd="10sp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_turn_off_all_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_btn_turn_off_all_light"
                    android:text="Выкл"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_in_presets"
                    android:fontFamily="@font/beauty_font_rus"
                    android:layout_marginEnd="10sp"
                    />
                <TextView
                    android:id="@+id/textview_turn_onoff_all_light"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ВЕСЬ СВЕТ"
                    android:background="@drawable/gradient_textview_turn_onoff_all_light"
                    android:fontFamily="@font/beauty_font_rus"
                    android:textSize="@dimen/text_size_in_presets"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="10"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:layout_marginTop="100sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="20sp"
                android:background="@drawable/gradient_linearlayout_presets"

                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_turn_on_all_podsvetka_stol"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_btn_turn_on_all_light"
                    android:text="Вкл"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_in_presets"
                    android:fontFamily="@font/beauty_font_rus"
                    android:layout_marginEnd="10sp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_turn_off_all_podsvetka_stol"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_btn_turn_off_all_light"
                    android:text="Выкл"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_in_presets"
                    android:fontFamily="@font/beauty_font_rus"
                    android:layout_marginEnd="10sp"
                    />
                <TextView
                    android:id="@+id/textview_turn_all_podsvetka_stol"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="СВЕТ СТОЛ"
                    android:background="@drawable/gradient_textview_turn_onoff_all_light"
                    android:fontFamily="@font/beauty_font_rus"
                    android:textSize="@dimen/text_size_in_presets"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="10"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:layout_marginTop="185sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="20sp"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_end_of_the_film"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_for_presets"
                    android:text="Конец фильма"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_in_presets"
                    android:fontFamily="@font/beauty_font_rus"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:layout_marginTop="275sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="20sp"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_turn_everything_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#D84B68FA"
                    android:text="Выключить всё"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_in_presets"
                    android:fontFamily="@font/beauty_font_rus"
                    />
            </LinearLayout>









        </FrameLayout>












    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
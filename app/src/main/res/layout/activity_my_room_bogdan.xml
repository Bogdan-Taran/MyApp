<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_for_activities"
    tools:context=".TheHomeActivity">

    <TextView
        android:id="@+id/text_top_my_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_under_textview_"
        android:fontFamily="@font/beauty_font_rus"
        android:gravity="center"
        android:text="@string/button_room_bogdan"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_names_of_activities_inTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_top_my_home">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="250sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Центральный свет"
                android:textSize="@dimen/text_size_names_of_rooms"
                android:fontFamily="@font/beauty_font_rus"
                android:layout_marginStart="@dimen/margin_for_textview_in_layouts"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/textview_on_click_change_color"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/room_bogdan"
                android:layout_width="100sp"
                android:gravity="center"
                android:layout_height="33dp"
                android:layout_marginEnd="20sp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:text="Вкл/выкл"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_of_number_gadgets" />



        </FrameLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMyRoomBogdan">

    <ImageView
        android:id="@+id/light_in_my_room_on"
        android:layout_marginBottom="200sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/light_on" />

    <ImageView
        android:id="@+id/light_in_my_room_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/light_in_my_room_on"
        app:layout_constraintStart_toStartOf="@+id/light_in_my_room_on"
        app:srcCompat="@drawable/light_off" />
</androidx.constraintlayout.widget.ConstraintLayout>











<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010101"
    tools:context=".TheHomeActivity">

    <TableRow
        android:id="@+id/main_textTop_room_Bogdan"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#BE0F0F0F">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/circle_room_bogdan"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="#343434">

            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_gravity="center"
                android:src="@drawable/back_pointer"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:text="Комната Богдан"
            android:textSize="28dp"
            android:textColor="@color/white"/>
    </TableRow>

    <TableRow
        android:id="@+id/devises_presets_switch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/main_textTop_room_Bogdan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgrounds_devices_presets"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:text="Устройства"
            android:textColor="@color/white"
            android:textSize="27dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backgroind_for_selected_activity_devices_presets"
            />
        <TextView
            android:text="Пресеты"
            android:textColor="@color/white"
            android:textSize="27dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </TableRow>

    <TableRow
        android:id="@+id/lustra"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/devises_presets_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/backgrounds_devices_presets"
        android:layout_marginHorizontal="20dp">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/circle_img_lustra"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="#343434">

            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:src="@drawable/lustra_icon"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:text="Люстра"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/customSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/CustomSwitch" />

            <TextView
                android:id="@+id/switchText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="выкл"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>





    </TableRow>





</androidx.constraintlayout.widget.ConstraintLayout>
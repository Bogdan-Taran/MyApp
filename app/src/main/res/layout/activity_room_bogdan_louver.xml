<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9F1D9"
    tools:context=".RoomBogdanLouver">


    <LinearLayout
        android:id="@+id/textImg_top_room_louver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_under_textview_"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_backdpace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:backgroundTint="#9FB900C6"
            android:src="@drawable/baseline_keyboard_backspace_24" />

        <TextView
            android:id="@+id/text_top_my_room_rgb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="@font/beauty_font_rus"
            android:gravity="center"
            android:text="Пульт для жалюзей"
            android:textColor="@color/white"
            android:textSize="26dp" />

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:backgroundTint="#9FB900C6"
            android:src="@drawable/baseline_home_24" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textImg_top_room_louver">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_both_louver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="10"
                android:background="@drawable/textview_on_click_change_color"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Обе жалюзи"
                android:textSize="25dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_open_lovers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_weight="5"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:text="откр"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_close_lovers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="закр"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="98dp"

            android:layout_marginEnd="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_louver_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="10"
                android:background="@drawable/textview_on_click_change_color"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Жалюзи 1"
                android:textSize="25dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_open_louver_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_weight="5"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:text="откр"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_close_louver_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="закр"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="180dp"

            android:layout_marginEnd="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_louver_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="10"
                android:background="@drawable/textview_on_click_change_color"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Жалюзи 2"
                android:textSize="25dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_open_louver_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_weight="5"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:text="откр"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_close_louver_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="закр"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="262dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_on_click_change_color"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Открыть жалюзи по времени:"
                android:textColor="@color/black"
                android:textSize="20dp"

                />


            <Spinner
                android:id="@+id/scheduleSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FBE268"
                android:spinnerMode="dialog"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout_set_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="364dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_setTheTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                android:background="@drawable/textview_on_click_change_color"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:padding="10dp"
                android:text="Задать время ЧЧ:ММ"
                android:textSize="20dp" />

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edittextInputHour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:hint="hour"
                        android:inputType="datetime" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:text=":"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        />

                    <EditText
                        android:id="@+id/edittextInputMinute"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:hint="minute"
                        android:inputType="datetime" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_send_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="6"
                        android:backgroundTint="#DD6D0A"
                        android:src="@drawable/baseline_schedule_send_24" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
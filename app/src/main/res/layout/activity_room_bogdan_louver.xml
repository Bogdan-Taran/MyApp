<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9F1D9"
    tools:context=".RoomBogdanLouver">


    <LinearLayout
        android:id="@+id/textImg_top_room_louver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border_under_textview_">

        <ImageButton
            android:backgroundTint="#9FB900C6"
            android:id="@+id/btn_backdpace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_keyboard_backspace_24"
            android:layout_weight="6"
            />
        <TextView
            android:id="@+id/text_top_my_room_rgb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/beauty_font_rus"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Пульт для жалюзей"
            android:textColor="@color/white"
            android:textSize="26dp" />

        <ImageButton
            android:id="@+id/btn_home"
            android:backgroundTint="#9FB900C6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:src="@drawable/baseline_home_24" />

    </LinearLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textImg_top_room_louver"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_both_louver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="10"
                android:background="@drawable/textview_on_click_change_color"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Открыть обе жалюзи"
                android:textSize="25dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_both_louver_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_weight="5"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:text="Вкл"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_of_number_gadgets" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_both_louver_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Выкл"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_of_number_gadgets" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="98dp"

            android:layout_marginEnd="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_louver_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="10"
                android:background="@drawable/textview_on_click_change_color"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Жалюзи 1"
                android:textSize="25dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_open_louver_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_weight="5"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:text="Вкл"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_of_number_gadgets" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_close_louver_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Выкл"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_of_number_gadgets" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="180dp"

            android:layout_marginEnd="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_louver_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="10"
                android:background="@drawable/textview_on_click_change_color"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Жалюзи 2"
                android:textSize="25dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_open_louver_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="15dp"
                android:layout_weight="5"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:text="Вкл"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_of_number_gadgets" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_close_louver_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/button_change_color_on_off"
                android:fontFamily="@font/beauty_font_rus"
                android:gravity="center"
                android:text="Выкл"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_of_number_gadgets" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="262dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Открыть жалюзи по времени:"
                android:textColor="@color/black"
                android:fontFamily="@font/beauty_font_rus"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/textview_on_click_change_color"

                />


            <Spinner
                android:background="#FBE268"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scheduleSpinner"
                />

        </LinearLayout>



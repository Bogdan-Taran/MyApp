<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="@drawable/back_for_reg">

    <TextView
        android:id="@+id/reg_textview_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="РЕГИСТРАЦИЯ"
        android:fontFamily="@font/beauty_font_rus"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/reg_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_textview_sign_in"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:background="#30FFFFFF"
        android:hint="Придумайте логин"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/beauty_font_rus"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="30dp"
        />

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_username"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="#30FFFFFF"
        android:hint="Ваш действующий email"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/beauty_font_rus"
        android:drawableLeft="@drawable/baseline_alternate_email_24"
        android:drawablePadding="30dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/reg_email"
        android:layout_marginEnd="25dp"
        android:background="#30FFFFFF"
        android:hint="Придумайте пароль"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/beauty_font_rus"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="30dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reg_"
        android:layout_marginTop="60dp"
        android:layout_below="@id/reg_password"
        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        android:fontFamily="@font/beauty_font_rus"
        android:textSize="25dp"
        android:backgroundTint="#7E031E49"
        android:layout_centerHorizontal="true"
        android:onClick="onClickReg"/>



</RelativeLayout>